<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingTop="10sp"
    android:paddingBottom="10sp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/store_image"
        android:layout_width="80sp"
        android:layout_height="80sp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/store_name_textview"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:text="Carrefour Felicia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/store_items_found_textview"
            android:layout_marginLeft="10dp"
            android:text="4 items in your shopping list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:id="@+id/distance_to_store_textview"
        android:gravity="center"
        android:text="200.05m"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>